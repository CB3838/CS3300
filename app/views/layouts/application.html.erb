<!DOCTYPE html>
<html>
  <head>
    <title>CS3300</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
      
      <ul class="navbar-nav">

        <a class="navbar-brand" href="/projects">Portfolio Project </a>

          <li class="nav-item active">
            <a class="nav-link" href="/projects">Home <span class="sr-only">(current)</span></a>
          </li>

          


          

      </ul>

      <% if (user_signed_in?) %>

        <form class="form-inline">

          Signed in as: <%= current_user.email %> &nbsp (
          <%= link_to "Log Out", "/users/sign_out", method: :delete %> )
          
        </form>

      <% else %>

        <form class="form-inline">
          <a class="btn btn-outline-success" href="/users/sign_in" role="button">Sign in</a>
        </form>

      <% end %>


    </nav>
    
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
